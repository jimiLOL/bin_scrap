{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ],
      "./*": [
        "./*"
      ],
    },
    "types": [
      "@types/node",
    ]
  },
  "include": [
    "/**/*.ts",
    "./controller"
  ],
  "exclude": [
    "node_modules",
  ]
}
